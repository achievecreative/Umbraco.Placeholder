@using AC.Placeholder.Extensions
@using AC.Placeholder.Features.Navigations
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject INavigationService navigationService;

@{
    var navs = navigationService.GetNavigation(Model);

    var siteSettings = Model.SiteSettings();

    var logo = siteSettings.GetMediaUrl("logo");

    var siteName = siteSettings.GetValue<string>("siteName");
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="@(logo)" alt="@(siteName)" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @foreach (var nav in navs)
                {
                    <li class="nav-item @(nav.Activate ? "active" : "")">
                        <a class="nav-link" href="@(nav.Url)">
                            @Html.Raw(nav.Title)
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>